<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65sp"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="04dp"
    android:paddingEnd="5dp"
    android:paddingLeft="03dp"
    android:paddingRight="03dp"
    android:paddingTop="4dp">

    <LinearLayout
        android:id="@+id/Layout0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgAcao"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:paddingRight="@dimen/fab_margin"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.93"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtNomeAcao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:gravity="left|center_vertical"
                android:text="NomeAcao"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtComentarioAcao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="comentário ação"
                android:textAlignment="viewStart"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>