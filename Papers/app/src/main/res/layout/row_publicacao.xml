<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:theme="@style/AppTheme.NoActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="0dp"
        android:visibility="visible"
        android:weightSum="1"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#FFF3F1F1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:ignore="DisableBaselineAlignment,ObsoleteLayoutParam">

            <LinearLayout
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="0.35"
                android:orientation="vertical"
                android:visibility="visible"
                tools:ignore="InefficientWeight">

                <GridLayout
                    android:id="@+id/gridSituacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="#FFF3F1F1"
                    android:columnCount="2"
                    android:padding="0dp"
                    android:rowCount="4"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:height="40dp"
                        android:background="@android:color/transparent"
                        android:paddingLeft="2dp"
                        android:text="Situação"
                        android:textAlignment="textStart"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="12sp"
                        android:visibility="visible"
                        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SmallSp" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:height="40dp"
                        android:background="@android:color/transparent"
                        android:text="Versão "
                        android:textAlignment="center"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="12sp"
                        android:visibility="visible"
                        tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                    <TextView
                        android:id="@+id/txtSituacao"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0"
                        android:height="40dp"
                        android:background="@android:color/transparent"
                        android:paddingLeft="2dp"
                        android:text="txtSituacao"
                        android:textAlignment="textStart"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,SmallSp" />

                    <TextView
                        android:id="@+id/txtVersao"
                        android:layout_width="60dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right|center_vertical|center_horizontal"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0"
                        android:height="40dp"
                        android:background="@android:color/transparent"
                        android:text="txtVersao"
                        android:textAlignment="center"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="left|center"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:gravity="left|center"
                        android:paddingBottom="0dp"
                        android:paddingLeft="2dp"
                        android:text="Data Limite Envio"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry,SmallSp" />

                    <TextView
                        android:id="@+id/lblDataPublicacao"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0"
                        android:height="40dp"
                        android:background="@android:color/transparent"
                        android:text="Publicado em "
                        android:textAlignment="center"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                    <TextView
                        android:id="@+id/txtDataLimite"
                        android:layout_width="85dp"
                        android:layout_height="15dp"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="left|center"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="0dp"
                        android:background="@android:color/transparent"
                        android:gravity="left|center_vertical|center_horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="2dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry,SmallSp" />

                    <TextView
                        android:id="@+id/txtDataPublicacao"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:height="40dp"
                        android:background="@android:color/transparent"
                        android:textAlignment="center"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                </GridLayout>


            </LinearLayout>

        </LinearLayout>

        <GridLayout
            android:id="@+id/gridTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa"
            android:columnCount="1">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="2dp"
                android:text="txtTitulo"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        </GridLayout>

        <GridLayout
            android:id="@+id/gridSubmissao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#fafafa"
            android:columnCount="1"
            android:rowCount="2"
            tools:ignore="ObsoleteLayoutParam">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical|center_horizontal"
                android:paddingBottom="0dp"
                android:paddingLeft="2dp"
                android:text="Submetido para"
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry,SmallSp" />

            <TextView
                android:id="@+id/txtDestino"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_gravity="left|center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:gravity="left|center"
                android:paddingBottom="0dp"
                android:paddingLeft="2dp"
                android:text="txtDestino"
                android:textColor="@color/cardview_dark_background"
                android:textSize="14sp"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry,SmallSp" />

        </GridLayout>

    </LinearLayout>

</RelativeLayout>

