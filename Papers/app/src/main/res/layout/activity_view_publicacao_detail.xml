<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerpublicacao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.rhcloud.papers.view.viewPublicacaoDetail">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:theme="@style/AppTheme.NoActionBar"
            android:visibility="visible">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                android:fitsSystemWindows="true"
                android:theme="@style/AppTheme.AppBarOverlay"
                android:visibility="visible"
                app:elevation="0dp"
                app:expanded="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="#FFE1DEDF"
                    android:elevation="0dp"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:padding="03dp"
                    android:weightSum="1"
                    tools:ignore="RtlHardcoded">

                    <GridLayout
                        android:id="@+id/gridPadrao"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btnVoltarHomePublicacaoDetail"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_chevron_left_black_18dp"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/titleapp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="Publicação"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                        <ImageButton
                            android:id="@+id/btnEditarPublica"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right|center"
                            android:background="@android:color/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_border_color_black_24dp"
                            tools:ignore="ContentDescription" />
                    </GridLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:visibility="visible"
                    android:weightSum="1"
                    tools:ignore="UselessParent">

                    <GridLayout
                        android:id="@+id/gridTituloPublicacaoDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFF3F1F1"
                        android:columnCount="1">

                        <TextView
                            android:id="@+id/txtTituloPublicacaoDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:height="40dp"
                            android:gravity="left|center_vertical"
                            android:text="txtTitulo"
                            android:textAlignment="viewStart"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                    </GridLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="#fafafa"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        tools:ignore="ObsoleteLayoutParam">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:orientation="vertical"
                            android:visibility="visible"
                            tools:ignore="InefficientWeight">

                            <GridLayout
                                android:id="@+id/gridSituacaoPublicacaoDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:columnCount="2"
                                android:rowCount="4">

                                <TextView
                                    android:id="@+id/lblSituacaoPublicacaoDetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_gravity="left|center_vertical"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1"
                                    android:height="40dp"
                                    android:background="@android:color/transparent"
                                    android:text="Situação"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textSize="10sp"
                                    android:visibility="visible"
                                    tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                                <TextView
                                    android:id="@+id/lblVersaoPublicacaoDetail"
                                    android:layout_width="60dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1"
                                    android:height="40dp"
                                    android:background="@android:color/transparent"
                                    android:text="Versão "
                                    android:textAlignment="center"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textSize="10sp"
                                    android:visibility="visible"
                                    tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                                <TextView
                                    android:id="@+id/txtSituacaoPublicacaoDetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_gravity="left|center_vertical"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="0"
                                    android:height="40dp"
                                    android:background="@android:color/transparent"
                                    android:text="txtSituacao"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:visibility="visible"
                                    tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                                <TextView
                                    android:id="@+id/txtVersaoPublicacaoDetail"
                                    android:layout_width="60dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="right|center_vertical|center_horizontal"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="0"
                                    android:height="40dp"
                                    android:background="@android:color/transparent"
                                    android:text="txtVersao"
                                    android:textAlignment="center"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:visibility="visible"
                                    tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                                <TextView
                                    android:id="@+id/lblDataLimitePublicacaoDetail"
                                    android:layout_width="85dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="false"
                                    android:layout_alignParentTop="false"
                                    android:layout_gravity="left|center"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@android:color/transparent"
                                    android:gravity="left|center"
                                    android:paddingBottom="0dp"
                                    android:text="Data Limite Envio"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textSize="10sp"
                                    tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SmallSp" />

                                <TextView
                                    android:id="@+id/lblDataPublicacaoPublicacaoDetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="0"
                                    android:height="40dp"
                                    android:background="@android:color/transparent"
                                    android:text="Publicado em "
                                    android:textAlignment="center"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textSize="10sp"
                                    android:visibility="visible"
                                    tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                                <TextView
                                    android:id="@+id/txtDataLimitePublicacaoDetail"
                                    android:layout_width="85dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentStart="false"
                                    android:layout_alignParentTop="false"
                                    android:layout_gravity="left|center"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="0dp"
                                    android:background="@android:color/transparent"
                                    android:gravity="left|center_vertical|center_horizontal"
                                    android:paddingBottom="0dp"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textSize="11sp"
                                    tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SmallSp" />

                                <TextView
                                    android:id="@+id/txtDataPublicacaoDetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1"
                                    android:height="40dp"
                                    android:background="@android:color/transparent"
                                    android:textAlignment="center"
                                    android:textColor="@color/cardview_dark_background"
                                    android:textSize="11sp"
                                    android:visibility="visible"
                                    tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

                            </GridLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <GridLayout
                        android:id="@+id/gridSubmissao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="#fafafa"
                        android:columnCount="1"
                        android:rowCount="2">

                        <TextView
                            android:id="@+id/lblDestinoPublicacaoDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="false"
                            android:layout_alignParentTop="false"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:paddingBottom="0dp"
                            android:text="Submetido para"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="10sp"
                            tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SmallSp" />

                        <TextView
                            android:id="@+id/txtDestinoPublicacaoDetail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="false"
                            android:layout_alignParentTop="false"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="4dp"
                            android:gravity="left|center"
                            android:paddingBottom="0dp"
                            android:text="txtDestino"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="11sp"
                            tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SmallSp" />

                    </GridLayout>

                    <GridLayout
                        android:id="@+id/gridIdioma"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="#fafafa"
                        android:columnCount="1"
                        android:rowCount="2">

                        <TextView
                            android:id="@+id/lblIdioma"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="false"
                            android:layout_alignParentTop="false"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:paddingBottom="0dp"
                            android:text="Idioma"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="10sp"
                            tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SmallSp" />

                        <TextView
                            android:id="@+id/txtIdiomaPublicacaoDetail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="false"
                            android:layout_alignParentTop="false"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="4dp"
                            android:gravity="left|center"
                            android:paddingBottom="0dp"
                            android:text="txtIdioma"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="11sp"
                            tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SmallSp" />

                    </GridLayout>

                </LinearLayout>

            </android.support.design.widget.AppBarLayout>

            <include
                android:id="@+id/includepublicacao"
                layout="@layout/content_view_publicacao_detail"
                android:visibility="visible" />

        </android.support.design.widget.CoordinatorLayout>

    </FrameLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_publicacoes_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation_publicacoes_detail">

    </android.support.design.widget.BottomNavigationView>
</LinearLayout>



