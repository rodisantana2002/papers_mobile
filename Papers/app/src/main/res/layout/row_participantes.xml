<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:ignore="ObsoleteLayoutParam">

            <ImageView
                android:id="@+id/imgFotoParticipante"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:foreground="@drawable/rounded_fg"
                android:scaleType="fitXY"
                android:src="@drawable/ic_camera_alt_black_18dp"
                android:visibility="visible"
                tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="0.93"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:visibility="visible"
                tools:ignore="InefficientWeight">

                <GridLayout
                    android:id="@+id/gridParticipante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtNomeParticipante"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:height="40dp"
                        android:gravity="left|center_vertical"
                        android:text="NomeAutor"
                        android:textAlignment="viewStart"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="14sp"
                        android:visibility="visible"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                </GridLayout>

                <TextView
                    android:id="@+id/txtInstituicaoParticipante"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:height="40dp"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:visibility="visible"
                    tools:ignore="HardcodedText,RtlHardcoded" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

