<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="04dp"
    android:paddingLeft="03dp"
    android:paddingRight="03dp"
    android:paddingTop="04dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgFotoAutor"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_camera_alt_black_18dp"
            android:visibility="visible"
            tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.93"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:text="Usuario esta concetado"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/txtNomeAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:gravity="left|center_vertical"
                android:text="NomeAutor"
                android:textAlignment="viewStart"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/txtInstituicaoAutorLista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Instituição"
                android:textAlignment="viewStart"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

